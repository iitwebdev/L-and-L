{% extends 'mytemplate.jinja2' %}
{% block content %}

   <section role="banner">
       <hgroup>
           <h1>это что.</h1>
           <h2>Часть поиска</h2>
       </hgroup>
    </section>

   <section class="container clearfix">
        <aside role="complementary">
            <h2 style="color: #3891cf">Поиск идеи</h2>
            <table class="search">
                <tr>
                    <td>Название</td>
                    <td><input type="text" name="ideasName" id="ideasName" value="{{ ideasName }}" required></td>
                </tr>
                <tr>
                    <td>Категория</td>
                    <td><select name="category" id="category">
                        {% for category in categories %}
                        <option value="{{ category }}">{{ category }}</option>
                        {% endfor %}
                    </select></td>
                </tr>
                <tr>
                    <td colspan="1">
                        <button type="submit" name="search" id="search">Найти</button>
                    </td>
                </tr>
            </table>
        </aside>



        <aside role="complementary1">
            <h2>10 самых популярных идей</h2>
            <table border="2" >
                <tr style="background-color: #f0f0f0; font-weight: bold">
                    <td>Номер идеи</td>
                    <td>Описание Идеи</td>
                </tr>
                <tr>
                    <td>Идея №1</td>
                    <td> От головы поможет только-ТОПОР</td>
                </tr>
            </table>

        </aside>

       <table border="3" style="margin: 0 auto;">
           <tr style="background-color: #f0f0f0; font-weight: bold">
               <th>Название</th>
               <th>Категория</th>
               <th>Описание</th>
               <th>Оценка</th>
           </tr>
           {% for idea in all_ideas %}
           <tr>
               <td>{{ idea.name }}</td>
               <td>{{ idea.category }}</td>
               <td>{{ idea.description }}</td>
               <td>{{ idea.rating }}</td>
           </tr>
           {% endfor %}
       </table>

   </section>
{% endblock %}